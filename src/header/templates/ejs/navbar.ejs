<div class="<%= prefix %>-header__navbar">
    <%
        const attrs = {};
        attrs[`data-${prefix}-opened`] = false;

        if (locals.tools && locals.tools.id) {
    %>
    <%- include('../../../buttons/templates/ejs/button', {
        classes: [prefix + '-btn--search'],
        title: 'Rechercher',
        attributes: {
            ...attrs,
            'aria-controls': tools.id,
        },
        label: 'Rechercher'
    }); %>
    <% } %>

    <% if (locals.navigation) { %>
    <%- include('../../../buttons/templates/ejs/button', {
        classes: [prefix + '-btn--menu'],
        title: 'Ouvrir le menu',
        attributes: {
            ...attrs,
            'aria-controls': navigation.id,
            'aria-haspopup': 'menu'
        },
        label: 'Ouvrir le menu'
    }); %>
    <% } %>
</div>
