<%
let data = {
  navbar: {}
}

switch (typeof locals.logo) {
    case 'string':
        data.brand = { logo: '../../../../logo/example/samples/logo-' + locals.logo };
        break;

    case 'object':
        data.brand = { logo: locals.logo };
        break;

    default:
        data.brand = { logo: '../../../../logo/example/samples/logo' };
}

if (locals.operator !== undefined) {
  data.brand.operator = locals.operator;
  data.brand.operator.alt = 'Texte alternatif logo opérateur'
}

let service = {
    title:'Nom du service',
    href: '#',
    tagline: 'baseline - précisions sur l‘organisation'
};

switch (typeof locals.service) {
    case 'boolean':
        data.brand.service = service;
        break;

    case 'object':
        data.brand.service = { ... locals.service, ... service, alt: 'Texte alternatif logo service'};
        break;
}

if (locals.shortcuts || locals.search) {
    data.tools = {};

    if (locals.shortcuts) data.tools.shortcuts = {
        items: [
            {
                icon: 'add-circle-line',
                href: '#',
                label: 'Créer un espace'
            },
            {
                icon: 'lock-line',
                href: '#',
                label: 'Se connecter'
            },
            {
                icon: 'account-line',
                href: '#',
                label: 'S’enregistrer'
            }
        ]
    };

    if (locals.search) {
        data.tools.search = locals.search === true ?
        {
            sample: '../../../../search/example/samples/search-default'
        }
        : locals.search;
        data.tools.search.id = locals.searchId || uniqueId('search');
        data.tools.id = uniqueId('tools');
    }

}

switch (true) {
    case locals.navigation === 'min':
        data.navigation = {
            sample: '../../../../navigation/example/samples/navigation-min'
        };
        break;

    case locals.navigation === true:
        data.navigation = {
            sample: '../../../../navigation/example/samples/navigation'
        };
        break;

    case typeof locals.navigation === 'object':
        data.navigation = navigation;
        break;


    case locals.shortcuts:
        data.navigation = {}
        break;
}

if (data.navigation) data.navigation.id = locals.navigationId || uniqueId('navigation');

%>

<%- include('../../src/templates/ejs/header', data); %>
